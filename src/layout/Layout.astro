---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppCTA from "../components/WhatsAppCTA.astro";

interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const page = "https://prodrive.com.ar/";

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />

    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={page} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://opengraph.b-cdn.net/production/images/2206165d-928a-4a03-8f21-52c7501bbdb8.png?token=gN3KhAKK3744BFsTyC1nRQ6lVoqmi7SeQiTC3808wxI&height=675&width=1200&expires=33299124977">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={page} />
    <meta property="twitter:url" content={page} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://opengraph.b-cdn.net/production/images/2206165d-928a-4a03-8f21-52c7501bbdb8.png?token=gN3KhAKK3744BFsTyC1nRQ6lVoqmi7SeQiTC3808wxI&height=675&width=1200&expires=33299124977">

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link
      rel="preload"
      as="font"
      href="/fonts/GuarujaGrotesk-Regular.woff2"
      type="font/woff2"
      crossorigin
    />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="overflow-x-hidden bg-[#0B081D]">
    <Header />
    <slot />
    <Footer />
    <WhatsAppCTA />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" is:inline
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js" is:inline></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollToPlugin.min.js" is:inline></script>
    
    <script is:inline>
      function initBrilloHover() {
        const elements = document.querySelectorAll('a[class*="bg-"], button[class*="bg-"], a[style*="background"], button[style*="background"], .brillo-hover');
        
        elements.forEach(element => {
          element.addEventListener('mousemove', (e) => {
            const rect = element.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            element.style.setProperty('--mouse-x', `${x}px`);
            element.style.setProperty('--mouse-y', `${y}px`);
          });
        });
      }

      document.addEventListener('astro:page-load', initBrilloHover);
    </script>
  </body>
</html>

<style>
  body {
    display: grid;
    min-height: 100dvh;
    grid-template-rows: auto 1fr auto;
  }
</style>
