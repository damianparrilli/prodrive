---
interface Props {
    icon: any;
    title: string;
    description: string;
}

const { icon: Icon, title, description } = Astro.props;
---

<div class="flex flex-col rounded-3xl h-full w-full p-4 bg-[#1A1631] brillo-hover text-center items-center border border-white/10 hover:border-white/20 transition-all duration-300 ease-in-out overflow-hidden">
  <div
    class="icon border-2 border-[#3F5BF6] bg-linear-to-b from-[#1E1C2C] to-[#1B1B1B] rounded-lg w-max p-4 mt-3 mb-3 text-[#3F5BF6] "
  >
    <Icon />

  </div>
  <div class="flex flex-col mb-6">
  <h3 class="text-[1.35rem]">{title}</h3>
  <p class="text-sm leading-6">{description}</p>
  </div>
</div>
