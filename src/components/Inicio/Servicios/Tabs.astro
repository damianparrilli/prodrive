---
interface Tab {
  id: string;
  label: string;
}
const { tabs = [], active = tabs[0]?.id } = Astro.props as { tabs: Tab[], active?: string };
---

<section class="tabs" data-tabs>
  <div class="overflow-x-auto w-full scroller px-[15px]">
    <div role="tablist" aria-label="Servicios" class="tab-list">
      {tabs.map((t) => (
        <button
          role="tab"
          id={`tab-${t.id}`}
          class="tab text-sm md:text-base"
          aria-selected={t.id === active ? 'true' : 'false'}
          aria-controls={`panel-${t.id}`}
          tabindex={t.id === active ? '0' : '-1'}
          data-tab={t.id}
        >
          {t.label}
        </button>
      ))}
      <span class="indicator" aria-hidden="true"></span>
    </div>
  </div>
  
  <div class="scroller-spacer"></div>

  {tabs.map((t) => (
    <div
      role="tabpanel"
      id={`panel-${t.id}`}
      aria-labelledby={`tab-${t.id}`}
      hidden={t.id !== active}
      class="tab-panel"
      data-panel={t.id}
    >
      {t.id === 'it' && <slot name="it" />}
      {t.id === 'gestion' && <slot name="gestion" />}
      {t.id === 'estrategias' && <slot name="estrategias" />}
    </div>
  ))}
</section>

<style>
  .tab-list {
    display: flex;
    gap: .6rem;
    align-items: center;
    justify-content: center;
    padding: .4rem;
    width: max-content;
    border-radius: 999px;
    background: #1A1631;
    position: relative;
    margin: 0 auto; 
     overflow-x: auto;
     
   }

   .scroller{
    scrollbar-width: none;
    border-bottom: transparent;
   }
   
   :global(body:has([data-page="servicios"])) .scroller {
    margin-bottom: -3rem;
   }
   
   .scroller-spacer {
    height: 0;
   }
   
   .scroller-spacer.active {
   
   }

   .scroller.fixed {
    position: fixed;
    padding: 0 15px;
    top: 70px;
    left: 0;
    right: 0;
    z-index: 50;
    background-color: #1A1631;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
   }

   .scroller::-webkit-scrollbar {
     display: none;
  }
  .tab {
    appearance: none;
    background: transparent;
    color: rgb(206, 206, 206);
    border: 1px solid #3452EB;
    border-radius: 999px;
    padding: .7rem 1.2rem;
    font-weight: 500;
    cursor: pointer;
    position: relative;
    z-index: 1;
    transition: all .3s ease-in-out;
  }
  .tab:hover{
    background-color: #2c47cc60;
  }
  .tab[aria-selected="true"] {
    color: #fff;
  }
  .indicator {
    position: absolute;
    left: 0;
    top: 6px;
    height: 100%;
    border-radius: 999px;
    background: #3f5bf6;
    width: 0;
    transition: transform .25s cubic-bezier(.4,1,.4,1), width .25s cubic-bezier(.4,1,.4,1);
    z-index: 0;
  }
  .tab-panel {
    margin-top: 1rem;
  }
  
  :global(body:has([data-page="servicios"])) .tab-panel {
    margin-top: 0;
  }
  
  .tabs [hidden] {
    display: none !important;
  }
</style>

<script is:inline>
  (() => {
    const isServiciosPage = window.location.pathname === '/servicios' || 
                            window.location.pathname === '/servicios/' || 
                            window.location.pathname.startsWith('/servicios#') ||
                            window.location.pathname.startsWith('/servicios?');
    
    if (!isServiciosPage) return;
    
    const scroller = document.querySelector('[data-tabs] .scroller');
    const spacer = document.querySelector('[data-tabs] .scroller-spacer');
    if (!scroller) return;

    const scrollerOffsetTop = scroller.offsetTop;
    const targetTop = 70;
    
    scroller.dataset.initialTop = scrollerOffsetTop;

    function handleScroll() {
      const scrollY = window.scrollY || window.pageYOffset;
      
      if (scrollY >= (scrollerOffsetTop - targetTop)) {
        scroller.classList.add('fixed');
        if (spacer) spacer.classList.add('active');
      } else {
        scroller.classList.remove('fixed');
        if (spacer) spacer.classList.remove('active');
      }
    }

    window.addEventListener('scroll', handleScroll, { passive: true });
    handleScroll();
  })();
</script>

<script is:inline>
  (() => {
    const root = document.querySelector('[data-tabs]');
    if (!root) return;

    const list = root.querySelector('[role="tablist"]');
    const tabs = Array.from(root.querySelectorAll('[role="tab"]'));
    const panels = Array.from(root.querySelectorAll('[role="tabpanel"]'));
    const ind = root.querySelector('.indicator');
    const scroller = root.querySelector('.scroller');

    function moveIndicatorTo(tab){
      const rList = list.getBoundingClientRect();
      const r = tab.getBoundingClientRect();
      ind.style.height = tab.offsetHeight + 'px';
      ind.style.width = r.width + 'px';
      ind.style.transform = `translateX(${r.left - rList.left}px)`;
    }

    function scrollTabIntoView(tabIdx) {
      if (!scroller) return;
      const tab = tabs[tabIdx];
      if (!tab) return;
      if (window.innerWidth >= 768) return;
      let targetLeft = 0;
      if (tabIdx === 0) {
        targetLeft = 0;
      } else if (tabIdx === tabs.length - 1) {
        targetLeft = scroller.scrollWidth - scroller.offsetWidth;
      } else {
        targetLeft = tab.offsetLeft + tab.offsetWidth / 2 - scroller.offsetWidth / 2;
      }
      if (window.gsap) {
        window.gsap.to(scroller, { scrollLeft: targetLeft, duration: 0.5, ease: "power2.out" });
      } else {
        scroller.scrollTo({ left: targetLeft, behavior: 'smooth' });
      }
    }

    function setActive(id, skipScroll = false) {
      tabs.forEach((t) => {
        const selected = t.dataset.tab === id;
        t.setAttribute("aria-selected", selected);
        t.tabIndex = selected ? 0 : -1;
        const panel = root.querySelector(`[data-panel="${t.dataset.tab}"]`);
        if (panel) panel.toggleAttribute("hidden", !selected);
      });

      const shown = root.querySelector(`[data-panel="${id}"]`);
      if (shown && window.gsap) {
        window.gsap.set(shown, { opacity: 1, x: 0 });
      }

      const activeTab = tabs.find((t) => t.dataset.tab === id);
      if (activeTab) moveIndicatorTo(activeTab);

      if (!skipScroll) {
        const tabIdx = tabs.findIndex(t => t.dataset.tab === id);
        scrollTabIntoView(tabIdx);
      }
    }

    function findTabForElement(elementId) {
      for (const panel of panels) {
        const element = panel.querySelector(`#${elementId}`);
        if (element) {
          return panel.dataset.panel;
        }
      }
      return null;
    }

    function scrollToElement(elementId) {
      setTimeout(() => {
        const element = document.getElementById(elementId);
        if (element) {
          element.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }, 100);
    }

    tabs.forEach((t) => {
      t.addEventListener("click", () => {
        const isServiciosPage = window.location.pathname === '/servicios' || 
                                window.location.pathname === '/servicios/' || 
                                window.location.pathname.startsWith('/servicios#') ||
                                window.location.pathname.startsWith('/servicios?');
        
        if (isServiciosPage && scroller && scroller.classList.contains('fixed')) {
          const initialTop = parseFloat(scroller.dataset.initialTop) || 0;
          const targetTop = 70;
          const scrollToPosition = initialTop - targetTop;
          
          window.scrollTo({
            top: scrollToPosition,
            behavior: 'smooth'
          });
        }
        
        setActive(t.dataset.tab);
        
        if (isServiciosPage) {
          const newUrl = `${window.location.pathname}?tab=${t.dataset.tab}`;
          window.history.pushState({}, '', newUrl);
        }
      });
    });

    const urlParams = new URLSearchParams(window.location.search);
    const tabParam = urlParams.get('tab');
    
    const hash = window.location.hash.substring(1);
    let initialTab = tabs.find(t => t.getAttribute('aria-selected') === 'true')?.dataset.tab || tabs[0]?.dataset.tab;

    if (hash) {
      const tabForHash = findTabForElement(hash);
      if (tabForHash) {
        initialTab = tabForHash;
        setActive(initialTab, false);
        scrollToElement(hash);
      }
    } else if (tabParam && tabs.some(t => t.dataset.tab === tabParam)) {
      initialTab = tabParam;
      setActive(initialTab, false);
    }

    const current = initialTab;
    function updateIndicator() {
      const activeTab = tabs.find(t=>t.dataset.tab===current);
      if (activeTab) moveIndicatorTo(activeTab);
    }
    if (current) {
      requestAnimationFrame(() => {
        requestAnimationFrame(updateIndicator);
      });
      window.addEventListener('load', updateIndicator);
      window.addEventListener('resize', () => {
        updateIndicator();
      }, { passive:true });
      const imgs = root.querySelectorAll('.tab-panel img');
      imgs.forEach(img => {
        img.addEventListener('load', updateIndicator);
      });
    }

  })();
</script>

